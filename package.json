  },
  "git": {
    "scripts": {
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "homepage": "https://github.com/Chatie/tsconfig#readme",
  "devDependencies": {
    "@types/blue-tape": "^0.1.32",
    "@types/json5": "0.0.30",
    "@types/read-pkg-up": "^3.0.1",
