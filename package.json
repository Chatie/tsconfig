{
  "name": "@chatie/tsconfig",
  "version": "1.0.0",
  "description": "tsconfig.json inheritance via Node.js packages",
  "tsconfig": "tsconfig.json",
  "type": "module",
  "exports": {
    ".": {
      "import": "./tsconfig.json",
      "require": "./tsconfig.json"
    }
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "dist": "echo dist",
    "lint": "echo lint",
    "postinstall": "node bin/install.js",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "cross-env NODE_OPTIONS=\"--no-warnings --loader=ts-node/esm\" tap \"tests/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chatie/tsconfig.git"
  },
  "keywords": [
    "tsconfig",
    "base",
    "inheritance",
    "share"
  ],
  "author": {
    "name": "Huan LI",
    "email": "zixia@zixia.net"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Chatie/tsconfig/issues"
  },
  "homepage": "https://github.com/Chatie/tsconfig#readme",
  "devDependencies": {
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@types/json5": "2.2.0",
    "file-box": "^0.16.8",
    "is-my-json-valid": "^2.20.5",
    "json5": "^2.2.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "files": [
    "tsconfig.json",
    "bin/install.js"
  ],
  "dependencies": {
    "@types/node": "^16.10.4",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "pkg-jq": "^0.2.11",
    "pkg-up": "^3.1.0",
    "shx": "^0.3.3",
    "ts-node": "^10.3.0",
    "tstest": "^0.7.3",
    "type-fest": "^2.5.0",
    "typescript": "^4.4.4"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
